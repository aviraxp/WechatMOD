<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/preference_title">
    <PreferenceScreen
        android:summary="@string/preference_note_summary"
        android:title="@string/preference_note" />
    <PreferenceCategory android:title="@string/preference_ui_settings">
        <CheckBoxPreference
            android:key="force_statusbar_color"
            android:summary="@string/preference_force_statusbar_color_summary"
            android:title="@string/preference_force_statusbar_color" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_about">
        <PreferenceScreen
            android:key="version"
            android:title="@string/preference_version" />
        <PreferenceScreen
            android:key="dev"
            android:title="@string/preference_dev" />
        <PreferenceScreen
            android:key="donate"
            android:title="@string/preference_donate" />
        <PreferenceScreen
            android:summary="icons provided by 萌萌的小雅酱@coolapk"
            android:title="Thanks" />
        <PreferenceScreen
            android:key="license"
            android:title="@string/preference_license" />
    </PreferenceCategory>
    <CheckBoxPreference
        android:key="hide_launcher_icon"
        android:summary="@string/preference_hide_launcher_icon_summary"
        android:title="@string/preference_hide_launcher_icon" />
</PreferenceScreen>